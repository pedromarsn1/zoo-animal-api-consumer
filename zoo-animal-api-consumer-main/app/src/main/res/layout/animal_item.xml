<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AnimalItem">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="267dp"
        tools:layout_editor_absoluteY="14dp"
        tools:srcCompat="@tools:sample/avatars"
        tools:ignore="MissingConstraints" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-8dp"
        tools:text="Animal Name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/latin_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Latin Name" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/animal_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="372dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Animal Type" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/active_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="344dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="4dp"
        tools:text="Active Time" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/length_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="316dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="4dp"
        tools:text="Minimum Length" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/max_length"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="16dp"
        tools:text="Maximum Length" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/weight_min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="256dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Minimum Weight" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/max_weight"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="228dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="0dp"
        tools:text="Maximum Weight" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lifespan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="8dp"
        tools:text="Lifespan" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/habitat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="168dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="4dp"
        tools:text="Habitat" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/diet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="136dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="8dp"
        tools:text="Diet" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/geo_range"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="8dp"
        tools:text="Geographic Range" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/image_link"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="16dp"
        tools:text="Image Link" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/animal_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:layout_editor_absoluteX="-10dp"
        tools:text="Id" />

</androidx.constraintlayout.widget.ConstraintLayout>